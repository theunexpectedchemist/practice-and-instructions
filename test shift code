print("Start")

def shifttoright(thestring, whattoshift):
	size = len(thestring)
	last = size - 1 # Last index, for Python.
	stringarray = []
	i = 0
	while i < size:
		stringarray.append(thestring[i])
		i = i + 1
	# Had to do that; can't assign values into a text string.
	i = 0
	while i < size:
		if stringarray[i] == whattoshift:
			# Now loop through every letter that is after the letter to be
			# shifted, and move them all to the left by one.
			j = i
			while j < last: # Can't be the very end. We have j + 1.
				stringarray[j] = stringarray[j + 1]
				j = j + 1
			stringarray[last] = whattoshift
		i = i + 1
	finalstring = "".join(stringarray)
	return finalstring

def shifttoleft(thestring, whattoshift):
	size = len(thestring)
	last = size - 1 # Last index, for Python.
	stringarray = []
	i = 0
	while i < size:
		stringarray.append(thestring[i])
		i = i + 1
	# Had to do that; can't assign values into a text string.
	i = 0
	while i < size:
		if stringarray[i] == whattoshift:
			# Now loop through every letter that is after the letter to be
			# shifted, and move them all to the left by one.
			j = i
			while j > 0: # Can't be the very end.
				stringarray[j] = stringarray[j - 1]
				j = j - 1 # Countdown loops are very useful!
			stringarray[0] = whattoshift
		i = i + 1
	finalstring = "".join(stringarray)
	return finalstring	

str1 = "the quick brown fox jumped over the lazy dogs"
str1 = "the quick browtnt fox jumped tover the lazy dogtstt"

whattoshifttoright = "t"
print(str1)
print(shifttoright(str1, whattoshifttoright))
print(str1)
print(shifttoleft(str1, whattoshifttoright))


print("End")
